<h2>Editing Book</h2>
<%= form_for(@post) do |f| %>
<div class="field">
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>

   <br><%= f.submit 'Update Book' %>
    <br><%= link_to "Show", post_path(@post.id) %>
    | <%= link_to "Back", posts_path %>

<% end %>
</div>