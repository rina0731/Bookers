 <div class="box">
 	<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
			<td><%= link_to "show", post_path(post.id), class: "show_#{post.id}" %></td>
			<td><%= link_to "edit",edit_post_path(post.id), class: "edit_#{post.id}" %></td>
			<td><%= link_to "destroy", destroy_post_path(post.id), method: :delete, "data-confirm" => "Are you sure?", class: "destroy_#{post.id}"%></td>
	    </tr>

	    <% end %>
	    	</tbody>
</table>

<h3 class="layout"> New book</h3>
<!-- form_for部分 -->
<%= form_for(@post) do |f| %>
 
    <h4 class="layout">title</h4>
    <%= f.text_field :title,class:"book_title" %>
 
    <h4 class="layout">body</h4>
    <%= f.text_area :body,class:"book_body" %>
 
 <br><%= f.submit 'Create Book' %></br>
 
<% end %>
</div>